<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoFinal.Views.Registrar"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout Padding="20">
            <Label Text="Registro de Usuario" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="NameEntry" Placeholder="Nombre" />
            <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True" />
            <Entry x:Name="PhoneEntry" Placeholder="Teléfono" Keyboard="Telephone" />
            <DatePicker x:Name="BirthDatePicker" />

            <Button Text="Registrar" Clicked="OnRegisterClicked" />

            <Label x:Name="StatusLabel" Text="" TextColor="Red" IsVisible="False" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>